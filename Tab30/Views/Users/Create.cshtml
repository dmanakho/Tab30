@model Tab30.Models.User

@{
    ViewBag.Title = "Add a User";
}

<div class="container">
    <div class="row">
        <div class="my-5 col-10">
            <h4>Add new User</h4>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
