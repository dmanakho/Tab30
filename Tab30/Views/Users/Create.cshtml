                <div class="col-6 form-group">
                        <input type="submit" value="Create" class="btn btn-primary" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {
